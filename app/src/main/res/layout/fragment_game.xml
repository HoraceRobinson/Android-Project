<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_ink2"
    tools:context=".home.fragment.GameFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            style="@style/AppTheme.PopupOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:title="趣橙"
            app:titleTextColor="@color/rou" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/chain"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="成语接龙"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/stxinwei"
        android:background="#BCBC91" />

    <TextView
        android:id="@+id/chain_reverse"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="逆向接龙"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/stxinwei"
        android:background="#AA6765" />

    <TextView
        android:id="@+id/find_idiom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="慧眼识珠"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/stxinwei"
        android:background="#5E4D77" />

</LinearLayout>