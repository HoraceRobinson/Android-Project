<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ticketpurchase">
    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon_orange"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_orange"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicketPurchase"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".home.fragment.game.ReverseChainActivity"
            android:exported="false" />
        <activity
            android:name=".home.activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".init.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".init.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".init.LaunchActivity"
            android:exported="true"
            android:theme="@style/XUITheme.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.fragment.game.FindActivity"
            android:exported="false" />
        <activity
            android:name=".home.fragment.game.ChainActivity"
            android:exported="false" />
        <activity
            android:name=".idiom.IdiomActivity"
            android:exported="false" />
        <activity
            android:name=".idiom.StarItemActivity"
            android:exported="false" />
        <activity
            android:name=".home.activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>